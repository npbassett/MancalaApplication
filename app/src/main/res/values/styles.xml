<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="materialButtonStyle">@style/ColoredButton</item>
        <item name="alertDialogStyle">@style/AlertDialog</item>
    </style>

    <style name="ColoredButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="strokeColor">@color/accent</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="strokeColor">@color/accent</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
